  <script>
    // State
    let currentAnalysis = null;
    let currentEntities = null;
    let rtes = [];
    let progressEventSource = null;
    let progressUpdateInterval = null;
    
    // Elements
    const documentContent = document.getElementById('documentContent');
    const analysisType = document.getElementById('analysisType');
    const modelSelect = document.getElementById('modelSelect');
    const customInstructions = document.getElementById('customInstructions');
    const analyzeBtn = document.getElementById('analyzeBtn');
    const fileInput = document.getElementById('fileInput');
    
    const outputEmpty = document.getElementById('outputEmpty');
    const outputProgress = document.getElementById('outputProgress');
    const outputResult = document.getElementById('outputResult');
    const outputContent = document.getElementById('outputContent');
    const metadata = document.getElementById('metadata');
    const entitiesPanel = document.getElementById('entitiesPanel');
    const entitiesGrid = document.getElementById('entitiesGrid');
    
    // Progress elements
    const progressBar = document.getElementById('progressBar');
    const progressPercent = document.getElementById('progressPercent');
    const progressElapsed = document.getElementById('progressElapsed');
    const chunkTableContainer = document.getElementById('chunkTableContainer');
    const chunkTableBody = document.getElementById('chunkTableBody');
    const totalSystems = document.getElementById('totalSystems');
    const totalActors = document.getElementById('totalActors');
    const totalRelationships = document.getElementById('totalRelationships');

    // Format elapsed time
    function formatElapsed(ms) {
      const seconds = Math.floor(ms / 1000);
      const minutes = Math.floor(seconds / 60);
      const hours = Math.floor(minutes / 60);
      if (hours > 0) {
        return `${hours}h ${minutes % 60}m ${seconds % 60}s`;
      } else if (minutes > 0) {
        return `${minutes}m ${seconds % 60}s`;
      }
      return `${seconds}s`;
    }

    // Connect to SSE progress endpoint
    function connectProgressSSE() {
      if (progressEventSource) {
        progressEventSource.close();
      }
      
      progressEventSource = new EventSource('/api/analyze/progress');
      
      progressEventSource.onmessage = (event) => {
        const progress = JSON.parse(event.data);
        updateProgressUI(progress);
      };
      
      progressEventSource.onerror = () => {
        // Reconnect after a delay
        setTimeout(connectProgressSSE, 2000);
      };
    }

    // Update progress UI from SSE data
    function updateProgressUI(progress) {
      if (!progress.active && progress.totalChunks === 0) {
        // No active analysis
        return;
      }
      
      // Show chunk table if we have chunks
      if (progress.totalChunks > 1) {
        chunkTableContainer.style.display = 'block';
        
        // Calculate progress percentage
        const doneCount = progress.chunkResults.filter(c => c.status === 'done').length;
        const pct = Math.round((doneCount / progress.totalChunks) * 100);
        progressBar.style.width = pct + '%';
        progressPercent.textContent = pct + '%';
        
        // Update elapsed time
        progressElapsed.textContent = 'Elapsed: ' + formatElapsed(progress.elapsedMs);
        
        // Update chunk table
        let html = '';
        let sysTotal = 0, actorTotal = 0, relTotal = 0;
        
        for (const chunk of progress.chunkResults) {
          const statusBadge = {
            pending: '<span class="status-badge pending">‚è≥ Pending</span>',
            processing: '<span class="status-badge processing">üîÑ Processing</span>',
            done: '<span class="status-badge done">‚úÖ Done</span>',
            failed: '<span class="status-badge failed">‚ùå Failed</span>'
          }[chunk.status] || '<span class="status-badge pending">‚è≥ Pending</span>';
          
          // Add retry button for failed chunks (only when not actively analyzing)
          const retryBtn = (chunk.status === 'failed' && !progress.active) 
            ? `<button class="retry-btn" onclick="retryChunk(${chunk.chunk - 1})">üîÑ Retry</button>`
            : '';
          
          html += `<tr>
            <td>${chunk.chunk}/${progress.totalChunks}</td>
            <td>${statusBadge} ${retryBtn}</td>
            <td>${chunk.status === 'done' ? chunk.systems : '-'}</td>
            <td>${chunk.status === 'done' ? chunk.actors : '-'}</td>
            <td>${chunk.status === 'done' ? chunk.relationships : '-'}</td>
          </tr>`;
          
          if (chunk.status === 'done') {
            sysTotal += chunk.systems || 0;
            actorTotal += chunk.actors || 0;
            relTotal += chunk.relationships || 0;
          }
        }
        
        chunkTableBody.innerHTML = html;
        totalSystems.textContent = sysTotal;
        totalActors.textContent = actorTotal;
        totalRelationships.textContent = relTotal;
        
        // Update progress text
        document.getElementById('progressText').textContent = 
          `Analyzing chunk ${progress.currentChunk} of ${progress.totalChunks}...`;
      }
    }

    // Disconnect SSE when done
    function disconnectProgressSSE() {
      if (progressEventSource) {
        progressEventSource.close();
        progressEventSource = null;
      }
    }
    
    // Retry a failed chunk
    async function retryChunk(chunkIndex) {
      const btn = event.target;
      btn.disabled = true;
      btn.textContent = '‚è≥ Retrying...';
      
      // Reconnect SSE for live updates
      connectProgressSSE();
      
      try {
        const res = await fetch('/api/analyze/retry-chunk', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ chunkIndex })
        });
        
        const data = await res.json();
        
        if (!res.ok) {
          throw new Error(data.error || 'Retry failed');
        }
        
        // Update totals display
        totalSystems.textContent = data.totalEntities.systems;
        totalActors.textContent = data.totalEntities.actors;
        totalRelationships.textContent = data.totalEntities.relationships;
        
        console.log(`Chunk ${chunkIndex + 1} retry succeeded:`, data.entities);
        
      } catch (e) {
        alert('Retry failed: ' + e.message);
      }
    }
    
    // Check for content passed from Ingest page
    (function checkIngestRedirect() {
      const content = sessionStorage.getItem('analyzeContent');
      const filename = sessionStorage.getItem('analyzeFilename');
      if (content) {
        documentContent.value = content;
        sessionStorage.removeItem('analyzeContent');
        sessionStorage.removeItem('analyzeFilename');
        // Show a notice
        if (filename) {
          const notice = document.createElement('div');
          notice.className = 'ingest-notice';
          notice.innerHTML = `üìÑ Content loaded from: <strong>${filename}</strong>`;
          notice.style.cssText = 'background: #1f6feb; color: white; padding: 8px 16px; border-radius: 6px; margin-bottom: 12px; font-size: 0.9rem;';
          documentContent.parentElement.insertBefore(notice, documentContent);
          setTimeout(() => notice.remove(), 5000);
        }
      }
    })();
    
    // Load RTEs for import
    async function loadRTEs() {
      try {
        const res = await fetch('/api/rte');
        rtes = await res.json();
        
        const select = document.getElementById('importRteSelect');
        const defaultRte = localStorage.getItem('poai_default_rte');
        select.innerHTML = rtes.map(r => 
          `<option value="${r.id}" ${defaultRte == r.id ? 'selected' : ''}>${r.name}</option>`
        ).join('');
      } catch (e) {
        console.error('Failed to load RTEs:', e);
      }
    }
    
    // File upload handler
    fileInput.addEventListener('change', async (e) => {
      const file = e.target.files[0];
      if (!file) return;
      
      const ext = file.name.split('.').pop().toLowerCase();
      
      // For .docx and .pages, use the parse-file endpoint
      if (ext === 'docx' || ext === 'pages') {
        try {
          const formData = new FormData();
          formData.append('file', file);
          
          const res = await fetch('/api/ingest/parse-file', {
            method: 'POST',
            body: formData
          });
          
          if (!res.ok) {
            const err = await res.json();
            throw new Error(err.error || 'Failed to parse file');
          }
          
          const parsed = await res.json();
          documentContent.value = parsed.content || '';
        } catch (err) {
          console.error('Parse error:', err);
          alert('Error parsing file: ' + err.message);
        }
      } else {
        // Plain text files
        const text = await file.text();
        documentContent.value = text;
      }
    });
    
    // Analyze button handler
    analyzeBtn.addEventListener('click', async () => {
      const content = documentContent.value.trim();
      if (!content) {
        alert('Please paste or upload a document first');
        return;
      }
      
      // Show progress
      outputEmpty.style.display = 'none';
      outputProgress.style.display = 'block';
      outputResult.style.display = 'none';
      entitiesPanel.style.display = 'none';
      
      // Reset progress UI
      progressBar.style.width = '0%';
      progressPercent.textContent = '0%';
      progressElapsed.textContent = 'Elapsed: 0s';
      chunkTableBody.innerHTML = '';
      chunkTableContainer.style.display = 'none';
      totalSystems.textContent = '0';
      totalActors.textContent = '0';
      totalRelationships.textContent = '0';
      
      // Connect to SSE for live progress updates
      connectProgressSSE();
      
      analyzeBtn.disabled = true;
      analyzeBtn.classList.add('loading');
      analyzeBtn.innerHTML = '<div class="spinner"></div><span>Analyzing...</span>';
      
      try {
        const res = await fetch('/api/analyze', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            content,
            analysisType: analysisType.value,
            model: modelSelect.value,
            customInstructions: customInstructions.value
          })
        });
        
        const data = await res.json();
        
        if (!res.ok) {
          throw new Error(data.error || 'Analysis failed');
        }
        
        currentAnalysis = data.analysis;
        currentEntities = data.entities;
        
        // Render output
        outputProgress.style.display = 'none';
        outputResult.style.display = 'block';
        outputContent.innerHTML = marked.parse(data.analysis);
        
        // Render metadata
        const chunksInfo = data.metadata.chunks > 1 ? `<div class="metadata-item">üìÑ ${data.metadata.chunks} chunks</div>` : '';
        metadata.innerHTML = `
          <div class="metadata-item">ü§ñ ${data.metadata.model}</div>
          <div class="metadata-item">‚è±Ô∏è ${(data.metadata.processingTimeMs / 1000).toFixed(1)}s</div>
          <div class="metadata-item">üì• ${data.metadata.inputLength.toLocaleString()} chars</div>
          <div class="metadata-item">üì§ ${data.metadata.outputLength.toLocaleString()} chars</div>
          ${chunksInfo}
        `;
        
        // Render entities
        renderEntities(data.entities);
        
      } catch (e) {
        outputProgress.style.display = 'none';
        outputEmpty.style.display = 'block';
        outputEmpty.innerHTML = `
          <div class="icon">‚ùå</div>
          <p>Analysis failed</p>
          <p style="font-size: 0.85rem; color: #f85149;">${e.message}</p>
        `;
      } finally {
        // Disconnect SSE
        disconnectProgressSSE();
        
        analyzeBtn.disabled = false;
        analyzeBtn.classList.remove('loading');
        analyzeBtn.innerHTML = '<span>üîç</span><span>Analyze Document</span>';
      }
    });
    
    // Render extracted entities
    function renderEntities(entities) {
      if (!entities) return;
      
      const sections = [];
      
      if (entities.systems?.length) {
        sections.push({
          title: 'üñ•Ô∏è Systems',
          items: entities.systems.map(s => s.name)
        });
      }
      
      if (entities.actors?.length) {
        sections.push({
          title: 'üë§ Actors',
          items: entities.actors.map(a => a.name)
        });
      }
      
      if (entities.relationships?.length) {
        sections.push({
          title: 'üîó Relationships',
          items: entities.relationships.map(r => `${r.from} ‚Üí ${r.to}`)
        });
      }
      
      if (entities.decisions?.length) {
        sections.push({
          title: '‚ö° Decisions',
          items: entities.decisions.slice(0, 5)
        });
      }
      
      if (entities.actions?.length) {
        sections.push({
          title: '‚úÖ Actions',
          items: entities.actions.slice(0, 5)
        });
      }
      
      if (sections.length === 0) {
        entitiesPanel.style.display = 'none';
        return;
      }
      
      entitiesGrid.innerHTML = sections.map(section => `
        <div class="entity-card">
          <h4>${section.title} <span class="count">${section.items.length}</span></h4>
          <ul class="entity-list">
            ${section.items.slice(0, 8).map(item => `<li>${item}</li>`).join('')}
            ${section.items.length > 8 ? `<li style="color: #6e7681;">+${section.items.length - 8} more</li>` : ''}
          </ul>
        </div>
      `).join('');
      
      entitiesPanel.style.display = 'block';
    }
    
    // Copy button
    document.getElementById('copyBtn').addEventListener('click', () => {
      if (currentAnalysis) {
        navigator.clipboard.writeText(currentAnalysis);
        document.getElementById('copyBtn').textContent = '‚úì Copied!';
        setTimeout(() => {
          document.getElementById('copyBtn').textContent = 'üìã Copy';
        }, 2000);
      }
    });
    
    // Save button
    document.getElementById('saveBtn').addEventListener('click', () => {
      if (!currentAnalysis) return;
      
      const blob = new Blob([currentAnalysis], { type: 'text/markdown' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `analysis-${new Date().toISOString().slice(0,10)}.md`;
      a.click();
      URL.revokeObjectURL(url);
    });
    
    // Import button
    document.getElementById('importBtn').addEventListener('click', () => {
      if (!currentEntities) return;
      
      const total = (currentEntities.systems?.length || 0) + 
                    (currentEntities.actors?.length || 0);
      const rels = currentEntities.relationships?.length || 0;
      
      document.getElementById('importSummary').innerHTML = `
        Will import: <strong>${total}</strong> actors/systems and <strong>${rels}</strong> relationships
      `;
      
      document.getElementById('importModal').classList.add('show');
    });
    
    // Cancel import
    document.getElementById('cancelImport').addEventListener('click', () => {
      document.getElementById('importModal').classList.remove('show');
    });
    
    // Confirm import
    document.getElementById('confirmImport').addEventListener('click', async () => {
      const rteId = document.getElementById('importRteSelect').value;
      
      try {
        const res = await fetch('/api/analyze/import', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            entities: currentEntities,
            rteId: parseInt(rteId)
          })
        });
        
        const data = await res.json();
        
        if (data.success) {
          alert(`‚úì ${data.message}`);
          document.getElementById('importModal').classList.remove('show');
        } else {
          throw new Error(data.error);
        }
      } catch (e) {
        alert('Import failed: ' + e.message);
      }
    });
    
    // Load marked.js for markdown rendering
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/marked/marked.min.js';
    document.head.appendChild(script);
    
    // Recover last analysis button
    document.getElementById('recoverBtn').addEventListener('click', async () => {
      try {
        const res = await fetch('/api/analyze/last');
        const data = await res.json();
        
        if (!res.ok) {
          throw new Error(data.error || 'No saved analysis found');
        }
        
        currentAnalysis = data.analysis;
        currentEntities = data.entities;
        
        // Render output
        outputEmpty.style.display = 'none';
        outputProgress.style.display = 'none';
        outputResult.style.display = 'block';
        outputContent.innerHTML = marked.parse(data.analysis);
        
        // Render metadata
        const chunksInfo = data.metadata.chunks > 1 ? `<div class="metadata-item">üìÑ ${data.metadata.chunks} chunks</div>` : '';
        const savedInfo = data.savedAt ? `<div class="metadata-item">üíæ Recovered from ${new Date(data.savedAt).toLocaleString()}</div>` : '';
        metadata.innerHTML = `
          <div class="metadata-item">ü§ñ ${data.metadata.model}</div>
          <div class="metadata-item">‚è±Ô∏è ${(data.metadata.processingTimeMs / 1000).toFixed(1)}s</div>
          <div class="metadata-item">üì• ${data.metadata.inputLength.toLocaleString()} chars</div>
          <div class="metadata-item">üì§ ${data.metadata.outputLength.toLocaleString()} chars</div>
          ${chunksInfo}
          ${savedInfo}
        `;
        
        // Render entities
        renderEntities(data.entities);
        
      } catch (e) {
        alert('Recovery failed: ' + e.message);
      }
    });
    
    // Initialize
    loadRTEs();
  </script>
</body>
