<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - PO AI</title>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    .settings-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .settings-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .settings-header h1 {
      font-size: 2rem;
      margin-bottom: 10px;
    }
    
    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      border-bottom: 1px solid #30363d;
      padding-bottom: 8px;
    }
    
    .tab {
      padding: 10px 20px;
      background: transparent;
      border: none;
      color: #8b949e;
      cursor: pointer;
      font-size: 0.95rem;
      border-radius: 6px 6px 0 0;
      transition: all 0.2s;
    }
    
    .tab:hover {
      color: #c9d1d9;
      background: #21262d;
    }
    
    .tab.active {
      color: #c9d1d9;
      background: #161b22;
      border: 1px solid #30363d;
      border-bottom: 1px solid #161b22;
      margin-bottom: -1px;
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
    .panel {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 20px;
    }
    
    .panel h3 {
      margin-bottom: 16px;
      color: #c9d1d9;
      font-size: 1.1rem;
    }
    
    .status-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }
    
    .status-card {
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 16px;
      text-align: center;
    }
    
    .status-icon {
      font-size: 2rem;
      margin-bottom: 8px;
    }
    
    .status-value {
      font-size: 1.5rem;
      font-weight: 600;
      color: #c9d1d9;
    }
    
    .status-label {
      font-size: 0.85rem;
      color: #8b949e;
    }
    
    .status-ok { color: #3fb950; }
    .status-warn { color: #f0883e; }
    .status-error { color: #f85149; }
    
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #30363d;
    }
    
    th {
      color: #8b949e;
      font-weight: 600;
      font-size: 0.85rem;
    }
    
    td {
      color: #c9d1d9;
    }
    
    .model-select {
      padding: 6px 10px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 4px;
      color: #c9d1d9;
      min-width: 150px;
    }
    
    .action-btn {
      padding: 6px 12px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
      font-size: 0.85rem;
    }
    
    .action-btn.primary {
      background: #238636;
      color: white;
    }
    
    .action-btn.secondary {
      background: #21262d;
      color: #c9d1d9;
      border: 1px solid #30363d;
    }
    
    .action-btn.danger {
      background: transparent;
      color: #f85149;
      border: 1px solid #f85149;
    }
    
    .action-btn:hover {
      opacity: 0.9;
    }
    
    .queue-status {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      margin-bottom: 16px;
    }
    
    .queue-stat {
      padding: 12px 20px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      text-align: center;
    }
    
    .queue-stat-value {
      font-size: 1.5rem;
      font-weight: 600;
    }
    
    .queue-stat-label {
      font-size: 0.75rem;
      color: #8b949e;
    }
    
    .queue-stat.pending .queue-stat-value { color: #f0883e; }
    .queue-stat.processing .queue-stat-value { color: #58a6ff; }
    .queue-stat.complete .queue-stat-value { color: #3fb950; }
    .queue-stat.failed .queue-stat-value { color: #f85149; }
    .queue-stat.dead .queue-stat-value { color: #6e7681; }
    
    .queue-actions {
      display: flex;
      gap: 10px;
      margin-bottom: 16px;
    }
    
    .tag-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    
    .tag-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 20px;
    }
    
    .tag-name {
      color: #c9d1d9;
    }
    
    .tag-count {
      color: #8b949e;
      font-size: 0.8rem;
    }
    
    .tag-delete {
      background: none;
      border: none;
      color: #8b949e;
      cursor: pointer;
      padding: 0;
      font-size: 1.1rem;
    }
    
    .tag-delete:hover {
      color: #f85149;
    }
    
    .add-form {
      display: flex;
      gap: 10px;
      margin-top: 16px;
    }
    
    .add-form input {
      flex: 1;
      padding: 8px 12px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 6px;
      color: #c9d1d9;
    }
    
    .add-form input:focus {
      outline: none;
      border-color: #58a6ff;
    }
    
    .toast {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 12px 20px;
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 8px;
      color: #c9d1d9;
      display: none;
      z-index: 1000;
    }
    
    .toast.success {
      border-color: #3fb950;
    }
    
    .toast.error {
      border-color: #f85149;
    }
    
    .toast.show {
      display: block;
    }

    /* Template maker */
    .template-card {
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 16px;
      transition: border-color 0.2s;
    }
    .template-card:hover {
      border-color: #58a6ff;
    }
    .template-card-info {
      flex: 1;
    }
    .template-card-info h4 {
      margin: 0 0 4px 0;
      color: #e6edf3;
    }
    .template-card-info p {
      margin: 0;
      color: #8b949e;
      font-size: 0.85rem;
    }
    .template-card-badge {
      padding: 4px 10px;
      background: #21262d;
      border: 1px solid #30363d;
      border-radius: 12px;
      color: #8b949e;
      font-size: 0.75rem;
      white-space: nowrap;
    }
    .template-card-actions {
      display: flex;
      gap: 8px;
    }
    .template-editor {
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 16px;
    }
    .template-editor h4 {
      margin: 0 0 16px;
      color: #e6edf3;
    }
    .field-row {
      display: flex;
      gap: 10px;
      align-items: center;
      margin-bottom: 8px;
      padding: 8px;
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 6px;
    }
    .field-row .grip {
      cursor: grab;
      color: #6e7681;
      font-size: 1.1rem;
      user-select: none;
    }
    .field-row input, .field-row select {
      padding: 6px 8px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 4px;
      color: #e6edf3;
      font-size: 0.85rem;
    }
    .field-row .field-key { width: 110px; }
    .field-row .field-label { flex: 1; }
    .field-row .field-hint { flex: 2; }
    .field-row .field-remove {
      background: none;
      border: none;
      color: #6e7681;
      cursor: pointer;
      font-size: 1.1rem;
      padding: 4px;
    }
    .field-row .field-remove:hover {
      color: #f85149;
    }
    .template-preview {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 16px;
      font-family: 'SF Mono', 'Fira Code', monospace;
      font-size: 0.85rem;
      white-space: pre-wrap;
      color: #c9d1d9;
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <%- include('partials/nav', { activePage: 'settings' }) %>

  <div class="settings-container">
    <div class="settings-header">
      <h1>‚öôÔ∏è Settings</h1>
      <p style="color: #8b949e;">Configure LLM models, manage tags, and monitor extraction</p>
    </div>
    
    <div class="tabs">
      <button class="tab active" onclick="showTab('status')">üìä Status</button>
      <button class="tab" onclick="showTab('llm')">ü§ñ LLM Models</button>
      <button class="tab" onclick="showTab('tags')">üè∑Ô∏è Semantic Tags</button>
      <button class="tab" onclick="showTab('templates')">üìù Templates</button>
      <button class="tab" onclick="showTab('extraction')">‚öôÔ∏è Extraction</button>
    </div>
    
    <!-- Status Tab -->
    <div id="status-tab" class="tab-content active">
      <div class="panel">
        <h3>üéØ Preferences</h3>
        <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
          <label style="color: #8b949e; min-width: 120px;">Default RTE:</label>
          <select id="defaultRte" class="model-select" onchange="saveDefaultRte(this.value)" style="flex: 1; max-width: 300px;">
            <option value="">Loading...</option>
          </select>
          <span id="rteSaved" style="color: #3fb950; font-size: 0.85rem; display: none;">‚úì Saved</span>
        </div>
        <p style="color: #6e7681; font-size: 0.85rem;">This RTE will be pre-selected on the Ingest page.</p>

        <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px; margin-top: 20px;">
          <label style="color: #8b949e; min-width: 120px;">Import folder:</label>
          <input type="text" id="incomingFolder" class="model-select" placeholder="~/Documents" style="flex: 1; max-width: 400px;">
          <button class="action-btn primary" onclick="saveIncomingFolder()" style="flex: none;">Save</button>
          <span id="folderSaved" style="color: #3fb950; font-size: 0.85rem; display: none;">‚úì Saved</span>
        </div>
        <p style="color: #6e7681; font-size: 0.85rem;">
          Folder to scan for documents in "Import Today". Use <code>~</code> for your home directory.
          <br>Examples: <code>~/Documents</code> (macOS/Linux/Windows), <code>~/Downloads</code>, <code>~/Dropbox/Notes</code>
        </p>
      </div>
      
      <div class="panel">
        <h3>System Status</h3>
        <div class="status-grid" id="statusGrid">
          <div class="status-card">
            <div class="status-icon">‚è≥</div>
            <div class="status-value">Loading...</div>
            <div class="status-label">Status</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- LLM Models Tab -->
    <div id="llm-tab" class="tab-content">
      <div class="panel">
        <h3>LLM Configuration</h3>
        <table>
          <thead>
            <tr>
              <th>Purpose</th>
              <th>Model</th>
              <th>Fallbacks</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="llmTable">
            <tr><td colspan="5">Loading...</td></tr>
          </tbody>
        </table>
      </div>
      
      <div class="panel">
        <h3>Available Models (Ollama)</h3>
        <div id="availableModels">Loading...</div>
      </div>
    </div>
    
    <!-- Tags Tab -->
    <div id="tags-tab" class="tab-content">
      <div class="panel">
        <h3>Semantic Tags</h3>
        <div class="tag-list" id="semanticTags">Loading...</div>
        <div class="add-form">
          <input type="text" id="newTagName" placeholder="Tag name">
          <input type="text" id="newTagDesc" placeholder="Description (optional)">
          <button class="action-btn primary" onclick="addSemanticTag()">+ Add Tag</button>
        </div>
      </div>
      
      <div class="panel">
        <h3>Content Types</h3>
        <p style="color: #6e7681; font-size: 0.85rem; margin-bottom: 12px;">
          Aliases are synonyms recognized during import (e.g. "bespreking" ‚Üí meeting). Comma-separated.
        </p>
        <div id="contentTypes">Loading...</div>
        <div class="add-form">
          <input type="text" id="newTypeName" placeholder="Type name">
          <input type="text" id="newTypeIcon" placeholder="Icon (emoji)" style="width: 80px; flex: none;">
          <button class="action-btn primary" onclick="addContentType()">+ Add Type</button>
        </div>
      </div>
    </div>
    
    <!-- Templates Tab -->
    <div id="templates-tab" class="tab-content">
      <div class="panel">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
          <div>
            <h3 style="margin-bottom: 4px;">üìù Document Templates</h3>
            <p style="color: #8b949e; font-size: 0.85rem; margin: 0;">Design templates, download as .md, fill in, and import. Templates appear in your incoming folder.</p>
          </div>
          <button class="action-btn primary" onclick="openTemplateEditor()">+ New Template</button>
        </div>
        <div id="templateList">Loading...</div>
      </div>

      <!-- Template Editor (hidden by default) -->
      <div id="templateEditorPanel" class="panel" style="display: none;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
          <h3 id="editorTitle" style="margin: 0;">New Template</h3>
          <button class="action-btn secondary" onclick="closeTemplateEditor()">‚úï Close</button>
        </div>
        <div class="template-editor">
          <div style="display: flex; gap: 12px; margin-bottom: 16px;">
            <div style="flex: 1;">
              <label style="color: #8b949e; font-size: 0.85rem;">Template name</label>
              <input type="text" id="tplName" placeholder="e.g. Sprint Meeting" style="width: 100%; padding: 8px; background: #0d1117; border: 1px solid #30363d; border-radius: 4px; color: #e6edf3; margin-top: 4px;">
            </div>
            <div style="flex: 1;">
              <label style="color: #8b949e; font-size: 0.85rem;">Description</label>
              <input type="text" id="tplDescription" placeholder="What is this template for?" style="width: 100%; padding: 8px; background: #0d1117; border: 1px solid #30363d; border-radius: 4px; color: #e6edf3; margin-top: 4px;">
            </div>
            <div style="width: 160px;">
              <label style="color: #8b949e; font-size: 0.85rem;">Default type</label>
              <select id="tplContentType" style="width: 100%; padding: 8px; background: #0d1117; border: 1px solid #30363d; border-radius: 4px; color: #e6edf3; margin-top: 4px;">
                <option value="">-- none --</option>
              </select>
            </div>
          </div>

          <h4>Fields</h4>
          <div style="display: flex; gap: 10px; margin-bottom: 8px; padding: 0 8px; color: #6e7681; font-size: 0.75rem;">
            <span style="width: 30px;"></span>
            <span class="field-key">Key</span>
            <span class="field-label">Label</span>
            <span class="field-hint">Hint / placeholder</span>
            <span style="width: 60px;">Prefill</span>
            <span style="width: 70px;">Multiline</span>
            <span style="width: 28px;"></span>
          </div>
          <div id="fieldRows"></div>
          <button class="action-btn secondary" onclick="addFieldRow()" style="margin-top: 8px;">+ Add Field</button>
          <div style="display: flex; gap: 8px; margin-top: 4px;">
            <button class="action-btn secondary" onclick="addFieldRow('date')" style="font-size: 0.8rem;">+ Date</button>
            <button class="action-btn secondary" onclick="addFieldRow('title')" style="font-size: 0.8rem;">+ Title</button>
            <button class="action-btn secondary" onclick="addFieldRow('type')" style="font-size: 0.8rem;">+ Type</button>
            <button class="action-btn secondary" onclick="addFieldRow('participants')" style="font-size: 0.8rem;">+ Participants</button>
            <button class="action-btn secondary" onclick="addFieldRow('tags')" style="font-size: 0.8rem;">+ Tags</button>
            <button class="action-btn secondary" onclick="addFieldRow('content')" style="font-size: 0.8rem;">+ Content</button>
          </div>
        </div>

        <h4 style="color: #e6edf3; margin-bottom: 8px;">Preview</h4>
        <div class="template-preview" id="templatePreview"></div>

        <div style="display: flex; gap: 10px; margin-top: 16px;">
          <button class="action-btn primary" onclick="saveTemplate()" style="padding: 10px 24px;">üíæ Save Template</button>
          <button class="action-btn secondary" onclick="downloadPreview()" style="padding: 10px 24px;">‚¨á Download .md Preview</button>
        </div>
      </div>
    </div>

    <!-- Extraction Tab -->
    <div id="extraction-tab" class="tab-content">
      <div class="panel">
        <h3>Extraction Queue</h3>
        <div class="queue-status" id="queueStatus">
          <div class="queue-stat pending">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Pending</div>
          </div>
          <div class="queue-stat processing">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Processing</div>
          </div>
          <div class="queue-stat complete">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Complete</div>
          </div>
          <div class="queue-stat failed">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Failed</div>
          </div>
          <div class="queue-stat dead">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Dead Letter</div>
          </div>
        </div>
        
        <div class="queue-actions">
          <button class="action-btn primary" id="workerToggle" onclick="toggleWorker()">Start Worker</button>
          <button class="action-btn secondary" onclick="retryFailed()">Retry Failed</button>
          <button class="action-btn secondary" onclick="retryDead()">Retry Dead</button>
          <button class="action-btn secondary" onclick="loadExtractionStatus()">üîÑ Refresh</button>
        </div>
        
        <table>
          <thead>
            <tr>
              <th>Document</th>
              <th>Status</th>
              <th>Attempts</th>
              <th>Error</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody id="queueTable">
            <tr><td colspan="5">Loading...</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div id="toast" class="toast"></div>

  <script>
    // Tab switching
    function showTab(tabName) {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
      
      document.querySelector(`[onclick="showTab('${tabName}')"]`).classList.add('active');
      document.getElementById(`${tabName}-tab`).classList.add('active');
      
      // Load data for tab
      if (tabName === 'status') loadStatus();
      if (tabName === 'llm') loadLLMConfig();
      if (tabName === 'tags') loadTags();
      if (tabName === 'templates') loadTemplates();
      if (tabName === 'extraction') loadExtractionStatus();
    }
    
    // Toast notifications - delegate to global POAI toast
    function showToast(message, type = 'success') {
      if (typeof POAI !== 'undefined' && POAI.toast) {
        POAI.toast.show(message, type);
      } else {
        // Fallback to old implementation
        const toast = document.getElementById('toast');
        if (toast) {
          toast.textContent = message;
          toast.className = `toast show ${type}`;
          setTimeout(() => toast.classList.remove('show'), 3000);
        }
      }
    }
    
    // Status tab
    async function loadStatus() {
      try {
        const response = await fetch('/api/settings/status');
        const status = await response.json();
        
        const grid = document.getElementById('statusGrid');
        grid.innerHTML = `
          <div class="status-card">
            <div class="status-icon">üíæ</div>
            <div class="status-value">${status.database?.documents || 0}</div>
            <div class="status-label">Documents</div>
          </div>
          <div class="status-card">
            <div class="status-icon">üè∑Ô∏è</div>
            <div class="status-value">${status.database?.tags || 0}</div>
            <div class="status-label">Tags</div>
          </div>
          <div class="status-card">
            <div class="status-icon">üìÅ</div>
            <div class="status-value">${status.database?.rtes || 0}</div>
            <div class="status-label">RTEs</div>
          </div>
          <div class="status-card">
            <div class="status-icon">${status.ollama?.available ? 'üü¢' : 'üî¥'}</div>
            <div class="status-value ${status.ollama?.available ? 'status-ok' : 'status-error'}">${status.ollama?.available ? 'Online' : 'Offline'}</div>
            <div class="status-label">Ollama (${status.ollama?.modelCount || 0} models)</div>
          </div>
          <div class="status-card">
            <div class="status-icon">${status.extraction?.running ? 'üü¢' : 'üü°'}</div>
            <div class="status-value ${status.extraction?.running ? 'status-ok' : 'status-warn'}">${status.extraction?.running ? 'Running' : 'Stopped'}</div>
            <div class="status-label">Extraction Worker</div>
          </div>
          <div class="status-card">
            <div class="status-icon">üìä</div>
            <div class="status-value">${status.extraction?.stats?.complete || 0}</div>
            <div class="status-label">Extracted</div>
          </div>
        `;
      } catch (error) {
        console.error('Failed to load status:', error);
      }
    }
    
    // Load RTEs for default selector
    async function loadRTEs() {
      try {
        const res = await fetch('/api/rte');
        const rtes = await res.json();
        const select = document.getElementById('defaultRte');
        const savedDefault = localStorage.getItem('poai_default_rte');
        
        select.innerHTML = '<option value="">-- No default --</option>' + 
          rtes.map(r => `<option value="${r.id}" ${savedDefault == r.id ? 'selected' : ''}>${r.name}</option>`).join('');
      } catch (err) {
        console.error('Failed to load RTEs:', err);
      }
    }
    
    async function saveDefaultRte(rteId) {
      if (rteId) {
        localStorage.setItem('poai_default_rte', rteId);
      } else {
        localStorage.removeItem('poai_default_rte');
      }
