        modelsDiv.innerHTML = availableModels.map(m => `
          <div style="display: inline-block; padding: 8px 16px; margin: 4px; background: #0d1117; border: 1px solid #30363d; border-radius: 20px;">
            ${m.name}
          </div>
        `).join('') || '<p style="color: #8b949e;">No models found. Is Ollama running?</p>';
