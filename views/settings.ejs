<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - PO AI</title>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    .settings-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .settings-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .settings-header h1 {
      font-size: 2rem;
      margin-bottom: 10px;
    }
    
    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      border-bottom: 1px solid #30363d;
      padding-bottom: 8px;
    }
    
    .tab {
      padding: 10px 20px;
      background: transparent;
      border: none;
      color: #8b949e;
      cursor: pointer;
      font-size: 0.95rem;
      border-radius: 6px 6px 0 0;
      transition: all 0.2s;
    }
    
    .tab:hover {
      color: #c9d1d9;
      background: #21262d;
    }
    
    .tab.active {
      color: #c9d1d9;
      background: #161b22;
      border: 1px solid #30363d;
      border-bottom: 1px solid #161b22;
      margin-bottom: -1px;
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
    .panel {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 20px;
    }
    
    .panel h3 {
      margin-bottom: 16px;
      color: #c9d1d9;
      font-size: 1.1rem;
    }
    
    .status-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }
    
    .status-card {
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 16px;
      text-align: center;
    }
    
    .status-icon {
      font-size: 2rem;
      margin-bottom: 8px;
    }
    
    .status-value {
      font-size: 1.5rem;
      font-weight: 600;
      color: #c9d1d9;
    }
    
    .status-label {
      font-size: 0.85rem;
      color: #8b949e;
    }
    
    .status-ok { color: #3fb950; }
    .status-warn { color: #f0883e; }
    .status-error { color: #f85149; }
    
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #30363d;
    }
    
    th {
      color: #8b949e;
      font-weight: 600;
      font-size: 0.85rem;
    }
    
    td {
      color: #c9d1d9;
    }
    
    .model-select {
      padding: 6px 10px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 4px;
      color: #c9d1d9;
      min-width: 150px;
    }
    
    .action-btn {
      padding: 6px 12px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
      font-size: 0.85rem;
    }
    
    .action-btn.primary {
      background: #238636;
      color: white;
    }
    
    .action-btn.secondary {
      background: #21262d;
      color: #c9d1d9;
      border: 1px solid #30363d;
    }
    
    .action-btn.danger {
      background: transparent;
      color: #f85149;
      border: 1px solid #f85149;
    }
    
    .action-btn:hover {
      opacity: 0.9;
    }
    
    .queue-status {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      margin-bottom: 16px;
    }
    
    .queue-stat {
      padding: 12px 20px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      text-align: center;
    }
    
    .queue-stat-value {
      font-size: 1.5rem;
      font-weight: 600;
    }
    
    .queue-stat-label {
      font-size: 0.75rem;
      color: #8b949e;
    }
    
    .queue-stat.pending .queue-stat-value { color: #f0883e; }
    .queue-stat.processing .queue-stat-value { color: #58a6ff; }
    .queue-stat.complete .queue-stat-value { color: #3fb950; }
    .queue-stat.failed .queue-stat-value { color: #f85149; }
    .queue-stat.dead .queue-stat-value { color: #6e7681; }
    
    .queue-actions {
      display: flex;
      gap: 10px;
      margin-bottom: 16px;
    }
    
    .tag-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    
    .tag-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 20px;
    }
    
    .tag-name {
      color: #c9d1d9;
    }
    
    .tag-count {
      color: #8b949e;
      font-size: 0.8rem;
    }
    
    .tag-delete {
      background: none;
      border: none;
      color: #8b949e;
      cursor: pointer;
      padding: 0;
      font-size: 1.1rem;
    }
    
    .tag-delete:hover {
      color: #f85149;
    }
    
    .add-form {
      display: flex;
      gap: 10px;
      margin-top: 16px;
    }
    
    .add-form input {
      flex: 1;
      padding: 8px 12px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 6px;
      color: #c9d1d9;
    }
    
    .add-form input:focus {
      outline: none;
      border-color: #58a6ff;
    }
    
    .toast {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 12px 20px;
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 8px;
      color: #c9d1d9;
      display: none;
      z-index: 1000;
    }
    
    .toast.success {
      border-color: #3fb950;
    }
    
    .toast.error {
      border-color: #f85149;
    }
    
    .toast.show {
      display: block;
    }
  </style>
</head>
<body>
  <%- include('partials/nav', { activePage: 'settings' }) %>

  <div class="settings-container">
    <div class="settings-header">
      <h1>‚öôÔ∏è Settings</h1>
      <p style="color: #8b949e;">Configure LLM models, manage tags, and monitor extraction</p>
    </div>
    
    <div class="tabs">
      <button class="tab active" onclick="showTab('status')">üìä Status</button>
      <button class="tab" onclick="showTab('llm')">ü§ñ LLM Models</button>
      <button class="tab" onclick="showTab('tags')">üè∑Ô∏è Semantic Tags</button>
      <button class="tab" onclick="showTab('extraction')">‚öôÔ∏è Extraction</button>
    </div>
    
    <!-- Status Tab -->
    <div id="status-tab" class="tab-content active">
      <div class="panel">
        <h3>üéØ Preferences</h3>
        <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
          <label style="color: #8b949e; min-width: 120px;">Default RTE:</label>
          <select id="defaultRte" class="model-select" onchange="saveDefaultRte(this.value)" style="flex: 1; max-width: 300px;">
            <option value="">Loading...</option>
          </select>
          <span id="rteSaved" style="color: #3fb950; font-size: 0.85rem; display: none;">‚úì Saved</span>
        </div>
        <p style="color: #6e7681; font-size: 0.85rem;">This RTE will be pre-selected on the Ingest page.</p>
      </div>
      
      <div class="panel">
        <h3>System Status</h3>
        <div class="status-grid" id="statusGrid">
          <div class="status-card">
            <div class="status-icon">‚è≥</div>
            <div class="status-value">Loading...</div>
            <div class="status-label">Status</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- LLM Models Tab -->
    <div id="llm-tab" class="tab-content">
      <div class="panel">
        <h3>LLM Configuration</h3>
        <table>
          <thead>
            <tr>
              <th>Purpose</th>
              <th>Model</th>
              <th>Fallbacks</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="llmTable">
            <tr><td colspan="5">Loading...</td></tr>
          </tbody>
        </table>
      </div>
      
      <div class="panel">
        <h3>Available Models (Ollama)</h3>
        <div id="availableModels">Loading...</div>
      </div>
    </div>
    
    <!-- Tags Tab -->
    <div id="tags-tab" class="tab-content">
      <div class="panel">
        <h3>Semantic Tags</h3>
        <div class="tag-list" id="semanticTags">Loading...</div>
        <div class="add-form">
          <input type="text" id="newTagName" placeholder="Tag name">
          <input type="text" id="newTagDesc" placeholder="Description (optional)">
          <button class="action-btn primary" onclick="addSemanticTag()">+ Add Tag</button>
        </div>
      </div>
      
      <div class="panel">
        <h3>Content Types</h3>
        <div class="tag-list" id="contentTypes">Loading...</div>
        <div class="add-form">
          <input type="text" id="newTypeName" placeholder="Type name">
          <input type="text" id="newTypeIcon" placeholder="Icon (emoji)" style="width: 80px; flex: none;">
          <button class="action-btn primary" onclick="addContentType()">+ Add Type</button>
        </div>
      </div>
    </div>
    
    <!-- Extraction Tab -->
    <div id="extraction-tab" class="tab-content">
      <div class="panel">
        <h3>Extraction Queue</h3>
        <div class="queue-status" id="queueStatus">
          <div class="queue-stat pending">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Pending</div>
          </div>
          <div class="queue-stat processing">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Processing</div>
          </div>
          <div class="queue-stat complete">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Complete</div>
          </div>
          <div class="queue-stat failed">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Failed</div>
          </div>
          <div class="queue-stat dead">
            <div class="queue-stat-value">-</div>
            <div class="queue-stat-label">Dead Letter</div>
          </div>
        </div>
        
        <div class="queue-actions">
          <button class="action-btn primary" id="workerToggle" onclick="toggleWorker()">Start Worker</button>
          <button class="action-btn secondary" onclick="retryFailed()">Retry Failed</button>
          <button class="action-btn secondary" onclick="retryDead()">Retry Dead</button>
          <button class="action-btn secondary" onclick="loadExtractionStatus()">üîÑ Refresh</button>
        </div>
        
        <table>
          <thead>
            <tr>
              <th>Document</th>
              <th>Status</th>
              <th>Attempts</th>
              <th>Error</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody id="queueTable">
            <tr><td colspan="5">Loading...</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div id="toast" class="toast"></div>

  <script>
    // Tab switching
    function showTab(tabName) {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
      
      document.querySelector(`[onclick="showTab('${tabName}')"]`).classList.add('active');
      document.getElementById(`${tabName}-tab`).classList.add('active');
      
      // Load data for tab
      if (tabName === 'status') loadStatus();
      if (tabName === 'llm') loadLLMConfig();
      if (tabName === 'tags') loadTags();
      if (tabName === 'extraction') loadExtractionStatus();
    }
    
    // Toast notifications - delegate to global POAI toast
    function showToast(message, type = 'success') {
      if (typeof POAI !== 'undefined' && POAI.toast) {
        POAI.toast.show(message, type);
      } else {
        // Fallback to old implementation
        const toast = document.getElementById('toast');
        if (toast) {
          toast.textContent = message;
          toast.className = `toast show ${type}`;
          setTimeout(() => toast.classList.remove('show'), 3000);
        }
      }
    }
    
    // Status tab
    async function loadStatus() {
      try {
        const response = await fetch('/api/settings/status');
        const status = await response.json();
        
        const grid = document.getElementById('statusGrid');
        grid.innerHTML = `
          <div class="status-card">
            <div class="status-icon">üíæ</div>
            <div class="status-value">${status.database?.documents || 0}</div>
            <div class="status-label">Documents</div>
          </div>
          <div class="status-card">
            <div class="status-icon">üè∑Ô∏è</div>
            <div class="status-value">${status.database?.tags || 0}</div>
            <div class="status-label">Tags</div>
          </div>
          <div class="status-card">
            <div class="status-icon">üìÅ</div>
            <div class="status-value">${status.database?.rtes || 0}</div>
            <div class="status-label">RTEs</div>
          </div>
          <div class="status-card">
            <div class="status-icon">${status.ollama?.available ? 'üü¢' : 'üî¥'}</div>
            <div class="status-value ${status.ollama?.available ? 'status-ok' : 'status-error'}">${status.ollama?.available ? 'Online' : 'Offline'}</div>
            <div class="status-label">Ollama (${status.ollama?.modelCount || 0} models)</div>
          </div>
          <div class="status-card">
            <div class="status-icon">${status.extraction?.running ? 'üü¢' : 'üü°'}</div>
            <div class="status-value ${status.extraction?.running ? 'status-ok' : 'status-warn'}">${status.extraction?.running ? 'Running' : 'Stopped'}</div>
            <div class="status-label">Extraction Worker</div>
          </div>
          <div class="status-card">
            <div class="status-icon">üìä</div>
            <div class="status-value">${status.extraction?.stats?.complete || 0}</div>
            <div class="status-label">Extracted</div>
          </div>
        `;
      } catch (error) {
        console.error('Failed to load status:', error);
      }
    }
    
    // Load RTEs for default selector
    async function loadRTEs() {
      try {
        const res = await fetch('/api/rte');
        const rtes = await res.json();
        const select = document.getElementById('defaultRte');
        const savedDefault = localStorage.getItem('poai_default_rte');
        
        select.innerHTML = '<option value="">-- No default --</option>' + 
          rtes.map(r => `<option value="${r.id}" ${savedDefault == r.id ? 'selected' : ''}>${r.name}</option>`).join('');
      } catch (err) {
        console.error('Failed to load RTEs:', err);
      }
    }
    
    async function saveDefaultRte(rteId) {
      if (rteId) {
        localStorage.setItem('poai_default_rte', rteId);
      } else {
        localStorage.removeItem('poai_default_rte');
      }
      // Persist to server so it's the true app-wide default
      try {
        await fetch('/api/rtes/default', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ rteId: rteId || null })
        });
      } catch (e) { console.error('Failed to save default RTE to server:', e); }
      // Show saved indicator
      const saved = document.getElementById('rteSaved');
      saved.style.display = 'inline';
      setTimeout(() => saved.style.display = 'none', 2000);
    }
    
    // LLM Config tab
    let availableModels = [];
    
    async function loadLLMConfig() {
      try {
        // Load configs
        const configRes = await fetch('/api/settings/llm');
        const configs = await configRes.json();
        
        // Load available models
        const modelsRes = await fetch('/api/settings/llm/available');
        availableModels = await modelsRes.json();
        
        // Create a set of available model names for quick lookup
        const availableModelNames = new Set(availableModels.map(m => m.name));
        
        const table = document.getElementById('llmTable');
        table.innerHTML = configs.map(c => {
          // Check if configured model is available
          const modelMissing = !availableModelNames.has(c.model_name);
          const warningBadge = modelMissing ? `<span style="color: #f85149; font-size: 0.8rem;"> ‚ö†Ô∏è not installed</span>` : '';
          
          // Build options - include configured model even if not available (marked as missing)
          let options = availableModels.map(m => 
            `<option value="${m.name}" ${m.name === c.model_name ? 'selected' : ''}>${m.name}</option>`
          ).join('');
          
          // If configured model is missing, add it as first option (selected)
          if (modelMissing) {
            options = `<option value="${c.model_name}" selected style="color: #f85149;">${c.model_name} (missing)</option>` + options;
          }
          
          return `
          <tr>
            <td><strong>${c.purpose}</strong></td>
            <td>
              <select class="model-select" onchange="updateLLM('${c.purpose}', this.value)">
                ${options}
              </select>
              ${warningBadge}
            </td>
            <td>${c.fallback_models || '-'}</td>
            <td><span class="${c.is_active ? 'status-ok' : 'status-warn'}">${c.is_active ? 'Active' : 'Inactive'}</span></td>
            <td>
              <button class="action-btn secondary" onclick="toggleLLMActive('${c.purpose}', ${!c.is_active})">
                ${c.is_active ? 'Disable' : 'Enable'}
              </button>
            </td>
          </tr>
        `}).join('');
        
        // Show available models
        const modelsDiv = document.getElementById('availableModels');
        modelsDiv.innerHTML = availableModels.map(m => `
          <div style="display: inline-block; padding: 8px 16px; margin: 4px; background: #0d1117; border: 1px solid #30363d; border-radius: 20px;">
            ${m.name}
          </div>
        `).join('') || '<p style="color: #8b949e;">No models found. Is Ollama running?</p>';
      } catch (error) {
        console.error('Failed to load LLM config:', error);
      }
    }
    
    async function updateLLM(purpose, model) {
      try {
        await fetch(`/api/settings/llm/${purpose}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ model_name: model })
        });
        showToast(`Model updated for ${purpose}`);
      } catch (error) {
        showToast('Failed to update model', 'error');
      }
    }
    
    async function toggleLLMActive(purpose, active) {
      try {
        await fetch(`/api/settings/llm/${purpose}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ is_active: active ? 1 : 0 })
        });
        loadLLMConfig();
        showToast(`${purpose} ${active ? 'enabled' : 'disabled'}`);
      } catch (error) {
        showToast('Failed to update', 'error');
      }
    }
    
    // Tags tab
    async function loadTags() {
      try {
        // Load semantic tags
        const tagRes = await fetch('/api/settings/semantic-tags');
        const tags = await tagRes.json();
        
        document.getElementById('semanticTags').innerHTML = tags.map(t => `
          <div class="tag-item">
            <span class="tag-name">${t.name}</span>
            <span class="tag-count">(${t.usage_count})</span>
            <button class="tag-delete" onclick="deleteSemanticTag('${t.name}')" title="${t.description || 'No description'}">√ó</button>
          </div>
        `).join('') || '<span style="color: #8b949e;">No tags</span>';
        
        // Load content types
        const typeRes = await fetch('/api/settings/content-types');
        const types = await typeRes.json();
        
        document.getElementById('contentTypes').innerHTML = types.map(t => `
          <div class="tag-item">
            <span>${t.icon || 'üìÑ'}</span>
            <span class="tag-name">${t.name}</span>
            <span class="tag-count">(${t.usage_count})</span>
          </div>
        `).join('') || '<span style="color: #8b949e;">No content types</span>';
      } catch (error) {
        console.error('Failed to load tags:', error);
      }
    }
    
    async function addSemanticTag() {
      const name = document.getElementById('newTagName').value.trim();
      const desc = document.getElementById('newTagDesc').value.trim();
      
      if (!name) return;
      
      try {
        const res = await fetch('/api/settings/semantic-tags', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, description: desc })
        });
        
        const result = await res.json();
        if (result.success) {
          document.getElementById('newTagName').value = '';
          document.getElementById('newTagDesc').value = '';
          loadTags();
          showToast(`Tag "${name}" created`);
        } else {
          showToast(result.error, 'error');
        }
      } catch (error) {
        showToast('Failed to create tag', 'error');
      }
    }
    
    async function deleteSemanticTag(name) {
      const confirmed = await POAI.confirm.danger('Delete Tag', `Delete tag "${name}"?`);
      if (!confirmed) return;
      
      try {
        const res = await fetch(`/api/settings/semantic-tags/${name}`, { method: 'DELETE' });
        const result = await res.json();
        
        if (result.success) {
          loadTags();
          showToast(`Tag "${name}" deleted`);
        } else {
          showToast(result.error, 'error');
        }
      } catch (error) {
        showToast('Failed to delete tag', 'error');
      }
    }
    
    async function addContentType() {
      const name = document.getElementById('newTypeName').value.trim();
      const icon = document.getElementById('newTypeIcon').value.trim();
      
      if (!name) return;
      
      try {
        const res = await fetch('/api/settings/content-types', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, icon })
        });
        
        const result = await res.json();
        if (result.success) {
          document.getElementById('newTypeName').value = '';
          document.getElementById('newTypeIcon').value = '';
          loadTags();
          showToast(`Content type "${name}" created`);
        } else {
          showToast(result.error, 'error');
        }
      } catch (error) {
        showToast('Failed to create content type', 'error');
      }
    }
    
    // Extraction tab
    let workerRunning = false;
    
    async function loadExtractionStatus() {
      try {
        // Get status
        const statusRes = await fetch('/api/settings/extraction/status');
        const status = await statusRes.json();
        
        workerRunning = status.workerRunning;
        document.getElementById('workerToggle').textContent = workerRunning ? 'Stop Worker' : 'Start Worker';
        
        // Update stats
        const stats = status.queue || {};
        document.querySelector('.queue-stat.pending .queue-stat-value').textContent = stats.pending || 0;
        document.querySelector('.queue-stat.processing .queue-stat-value').textContent = stats.processing || 0;
        document.querySelector('.queue-stat.complete .queue-stat-value').textContent = stats.complete || 0;
        document.querySelector('.queue-stat.failed .queue-stat-value').textContent = stats.failed || 0;
        document.querySelector('.queue-stat.dead .queue-stat-value').textContent = stats.dead || 0;
        
        // Get queue items
        const queueRes = await fetch('/api/settings/extraction/queue');
        const items = await queueRes.json();
        
        const table = document.getElementById('queueTable');
        table.innerHTML = items.map(item => `
          <tr>
            <td>${item.filename}</td>
            <td><span class="${item.status === 'complete' ? 'status-ok' : item.status === 'failed' ? 'status-error' : ''}">${item.status}</span></td>
            <td>${item.attempts}/${item.max_attempts}</td>
            <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">${item.error_message || '-'}</td>
            <td>${new Date(item.created_at).toLocaleString()}</td>
          </tr>
        `).join('') || '<tr><td colspan="5" style="color: #8b949e;">No items in queue</td></tr>';
      } catch (error) {
        console.error('Failed to load extraction status:', error);
      }
    }
    
    async function toggleWorker() {
      try {
        await fetch(`/api/settings/extraction/${workerRunning ? 'stop' : 'start'}`, { method: 'POST' });
        showToast(`Worker ${workerRunning ? 'stopped' : 'started'}`);
        loadExtractionStatus();
      } catch (error) {
        showToast('Failed to toggle worker', 'error');
      }
    }
    
    async function retryFailed() {
      try {
        const res = await fetch('/api/settings/extraction/retry', { method: 'POST' });
        const result = await res.json();
        showToast(result.message);
        loadExtractionStatus();
      } catch (error) {
        showToast('Failed to retry', 'error');
      }
    }
    
    async function retryDead() {
      try {
        const res = await fetch('/api/settings/extraction/retry-dead', { method: 'POST' });
        const result = await res.json();
        showToast(result.message);
        loadExtractionStatus();
      } catch (error) {
        showToast('Failed to retry', 'error');
      }
    }
    
    // Initial load
    loadStatus();
    loadRTEs();
  </script>
</body>
