    function addFieldRow(preset) {
      const f = preset ? { ...fieldPresets[preset] } : { key: '', label: '', hint: '', prefill: '', multiline: false };
      insertFieldRow(f);
      updatePreview();
    }

    function insertFieldRow(f) {
      const container = document.getElementById('fieldRows');
      const row = document.createElement('div');
      row.className = 'field-row';
      row.innerHTML = `
        <span class="grip">‚†ø</span>
        <input class="field-key" value="${esc(f.key || '')}" placeholder="key" oninput="updatePreview()">
        <input class="field-label" value="${esc(f.label || '')}" placeholder="Label shown in template" oninput="updatePreview()">
        <input class="field-hint" value="${esc(f.hint || '')}" placeholder="Hint / example" oninput="updatePreview()">
        <input style="width: 60px;" value="${esc(f.prefill || '')}" placeholder="prefill" oninput="updatePreview()">
        <label style="width: 70px; display: flex; align-items: center; gap: 4px; color: #8b949e; font-size: 0.8rem; cursor: pointer;">
          <input type="checkbox" ${f.multiline ? 'checked' : ''} onchange="updatePreview()"> multi
        </label>
        <button class="field-remove" onclick="this.closest('.field-row').remove(); updatePreview();">‚úï</button>
      `;
      container.appendChild(row);
    }

    function getFieldsFromEditor() {
      const rows = document.querySelectorAll('#fieldRows .field-row');
      return Array.from(rows).map(row => {
        const inputs = row.querySelectorAll('input');
        return {
          key: inputs[0].value.trim(),
          label: inputs[1].value.trim(),
          hint: inputs[2].value.trim(),
          prefill: inputs[3].value.trim(),
          multiline: inputs[4].checked
        };
      }).filter(f => f.key || f.label);
    }

    function updatePreview() {
      const fields = getFieldsFromEditor();
      const contentType = document.getElementById('tplContentType').value;

      // Build type hints
      let typeHints = '';
      if (contentTypes.length > 0) {
        const vals = contentTypes.map(ct => {
          const aliases = ct.aliases ? ct.aliases.split(',').map(a => a.trim()).filter(a => a) : [];
          return [ct.name, ...aliases];
        });
        typeHints = vals.flat().join(', ');
      }

      const today = new Date();
      const dayNames = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
      const monthNames = ['January','February','March','April','May','June','July','August','September','October','November','December'];
      const dateStr = `${dayNames[today.getDay()]}, ${today.getDate()} ${monthNames[today.getMonth()]} ${today.getFullYear()}`;

      let md = '';
      for (const f of fields) {
        if (f.key === 'content') continue;

        let value = f.prefill || '';
        let comment = '';

        if (f.key === 'date') value = dateStr;
        if (f.key === 'type' && !value && contentType) value = contentType;
        if (f.key === 'type' && typeHints) comment = `  ‚Üê ${typeHints}`;
        if (!value && f.hint) comment = comment || `  ‚Üê ${f.hint}`;

        md += `${f.label || f.key}: ${value}${comment}\n`;
      }

      const contentField = fields.find(f => f.key === 'content');
      if (contentField) {
        md += `\n${contentField.hint || 'Write your content here...'}\n`;
      }

      document.getElementById('templatePreview').textContent = md;
    }

    async function saveTemplate() {
      const name = document.getElementById('tplName').value.trim();
      if (!name) return showToast('Template name is required', 'error');

      const payload = {
        name,
        description: document.getElementById('tplDescription').value.trim(),
        content_type: document.getElementById('tplContentType').value,
        fields: getFieldsFromEditor()
      };

      // Set the type prefill from the dropdown if the type field exists and has no prefill
      const typeField = payload.fields.find(f => f.key === 'type');
      if (typeField && !typeField.prefill && payload.content_type) {
        typeField.prefill = payload.content_type;
      }

      try {
        const url = editingTemplateId
          ? `/api/settings/templates/${editingTemplateId}`
          : '/api/settings/templates';
        const method = editingTemplateId ? 'PUT' : 'POST';

        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });
        const result = await res.json();

        if (result.success) {
          showToast(`Template "${name}" saved`);
          editingTemplateId = result.template.id;
          loadTemplates();
        } else {
          showToast(result.error || 'Failed to save', 'error');
        }
      } catch (e) {
        showToast('Failed to save template', 'error');
      }
    }

    function downloadPreview() {
      // If saved, use the server download (includes DB type hints)
      if (editingTemplateId) {
        window.location.href = `/api/settings/templates/${editingTemplateId}/download`;
        return;
      }
      // Otherwise generate from editor state
      const preview = document.getElementById('templatePreview').textContent;
      const name = document.getElementById('tplName').value.trim() || 'template';
      const safeName = name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/-+$/, '');
      const blob = new Blob([preview], { type: 'text/markdown' });
      const a = document.createElement('a');
      a.href = URL.createObjectURL(blob);
      a.download = `${safeName}-template.md`;
      a.click();
      URL.revokeObjectURL(a.href);
    }

