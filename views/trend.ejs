<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trends - PO AI</title>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    .trend-container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .trend-header {
      text-align: center;
      margin-bottom: 30px;
    }
    
    .trend-header h1 {
      font-size: 2rem;
      margin-bottom: 10px;
    }
    
    .trend-form {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 24px;
    }
    
    .form-row {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      align-items: flex-end;
    }
    
    .form-group {
      flex: 1;
      min-width: 200px;
    }
    
    .form-group label {
      display: block;
      color: #8b949e;
      font-size: 0.9rem;
      margin-bottom: 6px;
    }
    
    .form-group input,
    .form-group select {
      width: 100%;
      padding: 10px 14px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 6px;
      color: #c9d1d9;
      font-size: 1rem;
    }
    
    .form-group input:focus,
    .form-group select:focus {
      outline: none;
      border-color: #58a6ff;
    }
    
    .analyze-btn {
      padding: 10px 28px;
      background: #8957e5;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      white-space: nowrap;
    }
    
    .analyze-btn:hover {
      background: #a371f7;
    }
    
    .analyze-btn:disabled {
      background: #21262d;
      cursor: not-allowed;
    }
    
    .results-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }
    
    @media (max-width: 900px) {
      .results-grid {
        grid-template-columns: 1fr;
      }
    }
    
    .timeline-panel {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 20px;
    }
    
    .timeline-panel h2 {
      font-size: 1.1rem;
      color: #c9d1d9;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .timeline {
      position: relative;
      padding-left: 20px;
    }
    
    .timeline::before {
      content: '';
      position: absolute;
      left: 6px;
      top: 0;
      bottom: 0;
      width: 2px;
      background: #30363d;
    }
    
    .timeline-event {
      position: relative;
      padding: 12px 16px;
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      margin-bottom: 12px;
      margin-left: 20px;
    }
    
    .timeline-event::before {
      content: '';
      position: absolute;
      left: -26px;
      top: 18px;
      width: 10px;
      height: 10px;
      background: #58a6ff;
      border-radius: 50%;
      border: 2px solid #161b22;
    }
    
    .timeline-event.decision::before { background: #3fb950; }
    .timeline-event.action::before { background: #f0883e; }
    .timeline-event.blocker::before { background: #f85149; }
    .timeline-event.promise::before { background: #a371f7; }
    
    .event-date {
      color: #58a6ff;
      font-size: 0.85rem;
      font-weight: 600;
      margin-bottom: 6px;
    }
    
    .event-filename {
      color: #8b949e;
      font-size: 0.75rem;
      margin-bottom: 6px;
    }
    
    .event-snippet {
      color: #c9d1d9;
      font-size: 0.9rem;
      line-height: 1.5;
    }
    
    .event-tags {
      display: flex;
      gap: 6px;
      flex-wrap: wrap;
      margin-top: 8px;
    }
    
    .tag {
      padding: 2px 8px;
      border-radius: 10px;
      font-size: 0.7rem;
    }
    
    .tag.decision { background: rgba(35, 134, 54, 0.2); color: #3fb950; }
    .tag.action { background: rgba(240, 136, 62, 0.2); color: #f0883e; }
    .tag.blocker { background: rgba(248, 81, 73, 0.2); color: #f85149; }
    .tag.promise { background: rgba(163, 113, 247, 0.2); color: #a371f7; }
    .tag.question { background: rgba(56, 139, 253, 0.2); color: #58a6ff; }
    .tag.requirement { background: rgba(136, 198, 190, 0.2); color: #88c6be; }
    .tag.default { background: rgba(139, 148, 158, 0.2); color: #8b949e; }
    
    .analysis-panel {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 20px;
    }
    
    .analysis-panel h2 {
      font-size: 1.1rem;
      color: #c9d1d9;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .analysis-content {
      background: #0d1117;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 16px;
      color: #c9d1d9;
      line-height: 1.7;
      font-size: 0.95rem;
      white-space: pre-wrap;
    }
    
    .analysis-meta {
      margin-top: 12px;
      padding-top: 12px;
      border-top: 1px solid #30363d;
      font-size: 0.8rem;
      color: #8b949e;
      display: flex;
      justify-content: space-between;
    }
    
    .summary-stats {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      margin-bottom: 16px;
      padding: 12px;
      background: #0d1117;
      border-radius: 8px;
    }
    
    .stat {
      text-align: center;
    }
    
    .stat-value {
      font-size: 1.5rem;
      font-weight: 600;
      color: #c9d1d9;
    }
    
    .stat-label {
      font-size: 0.75rem;
      color: #8b949e;
    }
    
    .loading {
      text-align: center;
      padding: 40px;
      color: #8b949e;
    }
    
    .loading::after {
      content: '';
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid #30363d;
      border-top-color: #a371f7;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-left: 10px;
      vertical-align: middle;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #8b949e;
    }
    
    .empty-state h3 {
      margin-bottom: 10px;
      color: #c9d1d9;
    }
    
    .suggested-topics {
      margin-top: 24px;
    }
    
    .suggested-topics h4 {
      font-size: 0.9rem;
      color: #8b949e;
      margin-bottom: 12px;
    }
    
    .topic-chips {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }
    
    .topic-chip {
      padding: 8px 16px;
      background: #21262d;
      border: 1px solid #30363d;
      border-radius: 20px;
      color: #c9d1d9;
      cursor: pointer;
      font-size: 0.9rem;
      transition: all 0.2s;
    }
    
    .topic-chip:hover {
      background: #30363d;
      border-color: #8957e5;
    }
    
    .topic-chip.project { border-left: 3px solid #a371f7; }
    .topic-chip.person { border-left: 3px solid #58a6ff; }
    .topic-chip.semantic { border-left: 3px solid #3fb950; }
  </style>
</head>
<body>
  <%- include('partials/nav', { activePage: 'trend' }) %>

  <div class="trend-container">
    <div class="trend-header">
      <h1>üìà Trend Analysis</h1>
      <p style="color: #8b949e;">Analyze how topics evolve over time across your documents</p>
    </div>
    
    <div class="trend-form">
      <div class="form-row">
        <div class="form-group" style="flex: 2;">
          <label>üîç Topic</label>
          <input type="text" id="topicInput" placeholder="Enter topic to analyze (e.g., DNA-C, authentication, Clara)">
        </div>
        
        <div class="form-group">
          <label>üìÖ From</label>
          <input type="date" id="dateFrom">
        </div>
        
        <div class="form-group">
          <label>üìÖ To</label>
          <input type="date" id="dateTo">
        </div>
        
        <button class="analyze-btn" id="analyzeBtn" onclick="analyzeTrend()">
          üìä Analyze
        </button>
      </div>
      
      <div class="form-row" style="margin-top: 16px;">
        <div class="form-group">
          <label>üìç RTE Filter</label>
          <select id="rteFilter">
            <option value="">All RTEs</option>
          </select>
        </div>
        
        <div class="form-group">
          <label>üë§ Person Filter</label>
          <select id="personFilter">
            <option value="">All People</option>
          </select>
        </div>
        
        <div class="form-group">
          <label>üìÅ Project Filter</label>
          <select id="projectFilter">
            <option value="">All Projects</option>
          </select>
        </div>
      </div>
    </div>
    
    <div id="resultsArea">
      <div class="empty-state">
        <h3>Discover patterns over time</h3>
        <p>Enter a topic to see how it has evolved in your documents.</p>
        
        <div class="suggested-topics" id="suggestedTopics">
          <h4>üí° Suggested topics:</h4>
          <div class="topic-chips" id="topicChips">
            <!-- Populated dynamically -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let rtes = [];

    async function init() {
      // Set default dates (last 30 days)
      const today = new Date();
      const thirtyDaysAgo = new Date(today.getTime() - 30 * 24 * 60 * 60 * 1000);
      
      document.getElementById('dateTo').value = today.toISOString().split('T')[0];
      document.getElementById('dateFrom').value = thirtyDaysAgo.toISOString().split('T')[0];

      // Load RTEs
      try {
        const response = await fetch('/api/rte');
        rtes = await response.json();
        
        const rteFilter = document.getElementById('rteFilter');
        const defaultRte = localStorage.getItem('poai_default_rte');
        
        rtes.forEach(rte => {
          const option = document.createElement('option');
          option.value = rte.id;
          option.textContent = rte.name;
          if (defaultRte && defaultRte == rte.id) {
            option.selected = true;
          }
          rteFilter.appendChild(option);
        });
      } catch (error) {
        console.error('Failed to load RTEs:', error);
      }

      // Load filters
      try {
        const response = await fetch('/api/search/filters');
        const filters = await response.json();
        
        const personFilter = document.getElementById('personFilter');
        filters.persons.forEach(p => {
          const option = document.createElement('option');
          option.value = p.name;
          option.textContent = `${p.name} (${p.count})`;
          personFilter.appendChild(option);
        });
        
        const projectFilter = document.getElementById('projectFilter');
        filters.projects.forEach(p => {
          const option = document.createElement('option');
          option.value = p.name;
          option.textContent = `${p.name} (${p.count})`;
          projectFilter.appendChild(option);
        });
      } catch (error) {
        console.error('Failed to load filters:', error);
      }

      // Load suggested topics
      try {
        const response = await fetch('/api/trend/topics');
        const topics = await response.json();
        
        const chips = document.getElementById('topicChips');
        chips.innerHTML = '';
        
        topics.projects.slice(0, 3).forEach(p => {
          chips.innerHTML += `<button class="topic-chip project" onclick="setTopic('${p.name}')">üìÅ ${p.name}</button>`;
        });
        
        topics.people.slice(0, 3).forEach(p => {
          chips.innerHTML += `<button class="topic-chip person" onclick="setTopic('${p.name}')">üë§ ${p.name}</button>`;
        });
        
        topics.semantics.slice(0, 3).forEach(s => {
          chips.innerHTML += `<button class="topic-chip semantic" onclick="setTopic('${s.name}')">üè∑Ô∏è ${s.name}</button>`;
        });
      } catch (error) {
        console.error('Failed to load topics:', error);
      }
    }

    function setTopic(topic) {
      document.getElementById('topicInput').value = topic;
      analyzeTrend();
    }

    async function analyzeTrend() {
      const topic = document.getElementById('topicInput').value.trim();
      if (!topic) return;

      const dateFrom = document.getElementById('dateFrom').value;
      const dateTo = document.getElementById('dateTo').value;
      const rteId = document.getElementById('rteFilter').value;
      const person = document.getElementById('personFilter').value;
      const project = document.getElementById('projectFilter').value;

      const resultsArea = document.getElementById('resultsArea');
      const analyzeBtn = document.getElementById('analyzeBtn');
      
      analyzeBtn.disabled = true;
      analyzeBtn.textContent = '‚è≥ Analyzing...';
      resultsArea.innerHTML = '<div class="loading">Building timeline and analyzing trends</div>';

      try {
        const response = await fetch('/api/trend', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            topic,
            dateFrom: dateFrom || undefined,
            dateTo: dateTo || undefined,
            rteId: rteId || undefined,
            person: person || undefined,
            project: project || undefined
          })
        });

        const result = await response.json();
        displayResult(result);
      } catch (error) {
        resultsArea.innerHTML = `
          <div class="empty-state">
            <h3>Error</h3>
            <p>${error.message}</p>
          </div>
        `;
      } finally {
        analyzeBtn.disabled = false;
        analyzeBtn.textContent = 'üìä Analyze';
      }
    }

    function displayResult(result) {
      const resultsArea = document.getElementById('resultsArea');
      const events = result.timeline?.events || [];
      const summary = result.timeline?.summary || {};

      // Build summary stats
      const statsHtml = `
        <div class="summary-stats">
          <div class="stat">
            <div class="stat-value">${events.length}</div>
            <div class="stat-label">Events</div>
          </div>
          <div class="stat">
            <div class="stat-value">${result.dateRange?.from || 'N/A'}</div>
            <div class="stat-label">From</div>
          </div>
          <div class="stat">
            <div class="stat-value">${result.dateRange?.to || 'N/A'}</div>
            <div class="stat-label">To</div>
          </div>
          ${Object.entries(summary.tagDistribution || {}).slice(0, 3).map(([tag, count]) => `
            <div class="stat">
              <div class="stat-value">${count}</div>
              <div class="stat-label">${tag}</div>
            </div>
          `).join('')}
        </div>
      `;

      // Build timeline
      const timelineHtml = events.map(e => {
        const primaryTag = e.semanticTags[0] || 'default';
        const tagsHtml = e.semanticTags.map(t => `<span class="tag ${t}">${t}</span>`).join('');
        
        return `
          <div class="timeline-event ${primaryTag}">
            <div class="event-date">${e.date}</div>
            <div class="event-filename">${e.filename}</div>
            <div class="event-snippet">${escapeHtml(e.snippet)}</div>
            ${tagsHtml ? `<div class="event-tags">${tagsHtml}</div>` : ''}
          </div>
        `;
      }).join('');

      resultsArea.innerHTML = `
        ${statsHtml}
        <div class="results-grid">
          <div class="timeline-panel">
            <h2>üìÖ Timeline (${events.length})</h2>
            ${events.length > 0 ? `<div class="timeline">${timelineHtml}</div>` : '<p style="color: #8b949e;">No events found</p>'}
          </div>
          
          <div class="analysis-panel">
            <h2>üìä Trend Analysis</h2>
            <div class="analysis-content">${escapeHtml(result.analysis)}</div>
            <div class="analysis-meta">
              <span>Topic: ${result.topic}</span>
              <span>Model: ${result.model || 'N/A'}</span>
            </div>
          </div>
        </div>
      `;
    }

    function escapeHtml(text) {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Submit on Enter
    document.getElementById('topicInput').addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        analyzeTrend();
      }
    });

    init();
  </script>
</body>
</html>
