<script>
// Onboarding state
let currentStep = 1;
let selectedRteId = null;

// Check and show onboarding if needed
async function checkOnboarding() {
  try {
    const res = await fetch('/api/onboarding/status');
    const { completed } = await res.json();

    if (!completed) {
      showOnboarding();
    }
  } catch (err) {
    console.error('Failed to check onboarding status:', err);
  }
}

function showOnboarding() {
  document.getElementById('onboardingModal').style.display = 'flex';
  runSystemChecks();
  loadRtes();
}

function nextStep(step) {
  // Hide all steps
  document.querySelectorAll('.onboarding-step').forEach(el => {
    el.style.display = 'none';
  });

  // Show target step
  document.querySelector(`.onboarding-step[data-step="${step}"]`).style.display = 'block';

  // Update progress indicators
  document.querySelectorAll('.progress-step').forEach(el => {
    const stepNum = parseInt(el.dataset.step);
    el.classList.remove('active', 'completed');
    if (stepNum < step) el.classList.add('completed');
    if (stepNum === step) el.classList.add('active');
  });

  currentStep = step;
}

async function runSystemChecks() {
  // Check Ollama
  const ollamaEl = document.getElementById('ollamaStatus');
  try {
    const res = await fetch('/api/health');
    const health = await res.json();

    ollamaEl.innerHTML = health.services.ollama
      ? '<span class="status-indicator success"></span><span>Ollama is running</span>'
      : '<span class="status-indicator error"></span><span>Ollama not detected ‚Äî <a href="https://ollama.ai" target="_blank">Install Ollama</a></span>';

    const dbEl = document.getElementById('dbStatus');
    dbEl.innerHTML = health.services.database
      ? `<span class="status-indicator success"></span><span>Database ready (${health.stats.documents} documents)</span>`
      : '<span class="status-indicator error"></span><span>Database error</span>';
  } catch (err) {
    ollamaEl.innerHTML = '<span class="status-indicator error"></span><span>Connection error</span>';
  }
}

async function loadRtes() {
  const select = document.getElementById('rteSelect');
  try {
    const res = await fetch('/api/rtes');
    const { rtes, defaultRteId } = await res.json();

    select.innerHTML = rtes
      .filter(r => r.name !== 'Orchestrator') // Hide system RTE
      .map(r => `<option value="${r.id}" ${r.id === defaultRteId ? 'selected' : ''}>${r.name}</option>`)
      .join('');

    selectedRteId = defaultRteId;
  } catch (err) {
    select.innerHTML = '<option value="">Failed to load RTEs</option>';
  }
}

function toggleNewRteInput() {
  const checkbox = document.getElementById('createNewRte');
  const inputDiv = document.getElementById('newRteInput');
  const selectEl = document.getElementById('rteSelect');

  inputDiv.style.display = checkbox.checked ? 'block' : 'none';
  selectEl.disabled = checkbox.checked;
}

async function saveRteAndContinue() {
  const createNew = document.getElementById('createNewRte').checked;

  if (createNew) {
    const newName = document.getElementById('newRteName').value.trim();
    if (!newName) {
      alert('Please enter an RTE name');
      return;
    }

    try {
      const res = await fetch('/api/rte', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: newName })
      });

      if (!res.ok) throw new Error('Failed to create RTE');

      const { rte } = await res.json();
      selectedRteId = rte.id;

      // Set as default
      await fetch('/api/rtes/default', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ rteId: selectedRteId })
      });
    } catch (err) {
      alert('Failed to create RTE: ' + err.message);
      return;
    }
  } else {
    selectedRteId = document.getElementById('rteSelect').value;

    // Set as default
    await fetch('/api/rtes/default', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ rteId: selectedRteId })
    });
  }

  nextStep(3);
}

async function completeOnboarding() {
  try {
    await fetch('/api/onboarding/complete', { method: 'POST' });
    document.getElementById('onboardingModal').style.display = 'none';

    // Refresh stats on home page
    if (typeof loadStats === 'function') {
      loadStats();
    }
  } catch (err) {
    console.error('Failed to complete onboarding:', err);
    document.getElementById('onboardingModal').style.display = 'none';
  }
}

function skipOnboarding() {
  completeOnboarding();
}

// Auto-run check on page load
document.addEventListener('DOMContentLoaded', checkOnboarding);
</script>
