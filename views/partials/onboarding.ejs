<script>
(function() {
  // Onboarding state
  let currentStep = 1;
  let selectedRteId = null;

  function nextStep(step) {
    document.querySelectorAll('.onboarding-step').forEach(function(el) {
      el.style.display = 'none';
    });
    var target = document.querySelector('.onboarding-step[data-step="' + step + '"]');
    if (target) target.style.display = 'block';

    document.querySelectorAll('.progress-step').forEach(function(el) {
      var stepNum = parseInt(el.getAttribute('data-step'));
      el.classList.remove('active', 'completed');
      if (stepNum < step) el.classList.add('completed');
      if (stepNum === step) el.classList.add('active');
    });
    currentStep = step;
  }

  async function runSystemChecks() {
    var ollamaEl = document.getElementById('ollamaStatus');
    try {
      var res = await fetch('/api/health');
      var health = await res.json();

      ollamaEl.innerHTML = health.services.ollama
        ? '<span class="status-indicator success"></span><span>Ollama is running</span>'
        : '<span class="status-indicator error"></span><span>Ollama not detected ‚Äî <a href="https://ollama.ai" target="_blank">Install Ollama</a></span>';

      var dbEl = document.getElementById('dbStatus');
      dbEl.innerHTML = health.services.database
        ? '<span class="status-indicator success"></span><span>Database ready (' + health.stats.documents + ' documents)</span>'
        : '<span class="status-indicator error"></span><span>Database error</span>';
    } catch (err) {
      if (ollamaEl) ollamaEl.innerHTML = '<span class="status-indicator error"></span><span>Connection error</span>';
    }
  }

  async function loadRtes() {
    var select = document.getElementById('rteSelect');
    try {
      var res = await fetch('/api/rtes');
      var data = await res.json();
      var rtes = data.rtes;
      var defaultRteId = data.defaultRteId;

      select.innerHTML = rtes
        .filter(function(r) { return r.name !== 'Orchestrator'; })
        .map(function(r) { return '<option value="' + r.id + '"' + (r.id === defaultRteId ? ' selected' : '') + '>' + r.name + '</option>'; })
        .join('');

      selectedRteId = defaultRteId;
    } catch (err) {
      if (select) select.innerHTML = '<option value="">Failed to load RTEs</option>';
    }
  }

  async function saveRteAndContinue() {
    var createNew = document.getElementById('createNewRte').checked;

    if (createNew) {
      var newName = document.getElementById('newRteName').value.trim();
      if (!newName) {
        alert('Please enter an RTE name');
        return;
      }
      try {
        var res = await fetch('/api/rte', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name: newName })
        });
        if (!res.ok) throw new Error('Failed to create RTE');
        var result = await res.json();
        selectedRteId = result.rte.id;
        await fetch('/api/rtes/default', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ rteId: selectedRteId })
        });
      } catch (err) {
        alert('Failed to create RTE: ' + err.message);
        return;
      }
    } else {
      selectedRteId = document.getElementById('rteSelect').value;
      await fetch('/api/rtes/default', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ rteId: selectedRteId })
      });
    }
    nextStep(3);
  }

  async function completeOnboarding() {
    try {
      await fetch('/api/onboarding/complete', { method: 'POST' });
    } catch (err) {
      console.error('Failed to complete onboarding:', err);
    }
    document.getElementById('onboardingModal').style.display = 'none';
    if (typeof loadStats === 'function') loadStats();
  }

  function showOnboarding() {
    document.getElementById('onboardingModal').style.display = 'flex';
    runSystemChecks();
    loadRtes();
  }

  async function checkOnboarding() {
    try {
      var res = await fetch('/api/onboarding/status');
      var data = await res.json();
      if (!data.completed) {
        showOnboarding();
      }
    } catch (err) {
      console.error('Failed to check onboarding status:', err);
    }
  }

  // Bind all event listeners once DOM is ready
  function bindEvents() {
    var skipBtn = document.getElementById('onb-skip');
    var startBtn = document.getElementById('onb-start');
    var backTo1Btn = document.getElementById('onb-back-to-1');
    var saveRteBtn = document.getElementById('onb-save-rte');
    var backTo2Btn = document.getElementById('onb-back-to-2');
    var completeBtn = document.getElementById('onb-complete');
    var createNewRte = document.getElementById('createNewRte');

    if (skipBtn) skipBtn.addEventListener('click', function() { completeOnboarding(); });
    if (startBtn) startBtn.addEventListener('click', function() { nextStep(2); });
    if (backTo1Btn) backTo1Btn.addEventListener('click', function() { nextStep(1); });
    if (saveRteBtn) saveRteBtn.addEventListener('click', function() { saveRteAndContinue(); });
    if (backTo2Btn) backTo2Btn.addEventListener('click', function() { nextStep(2); });
    if (completeBtn) completeBtn.addEventListener('click', function() { completeOnboarding(); });
    if (createNewRte) createNewRte.addEventListener('change', function() {
      var inputDiv = document.getElementById('newRteInput');
      var selectEl = document.getElementById('rteSelect');
      inputDiv.style.display = this.checked ? 'block' : 'none';
      selectEl.disabled = this.checked;
    });

    checkOnboarding();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', bindEvents);
  } else {
    bindEvents();
  }
})();
</script>
