    function formatDate(dateStr) {
      const date = new Date(dateStr);
      const now = new Date();
      const diff = now - date;
      
      if (diff < 60000) return 'Just now';
      if (diff < 3600000) return `${Math.floor(diff / 60000)}m ago`;
      if (diff < 86400000) return `${Math.floor(diff / 3600000)}h ago`;
      if (diff < 604800000) return `${Math.floor(diff / 86400000)}d ago`;
      
      return date.toLocaleDateString();
    }

    // === Document Viewer (Evidence Click-Through) ===

    async function openEvidenceDoc(evidenceIndex) {
      if (evidenceIndex < 0 || evidenceIndex >= currentEvidence.length) {
        console.warn('[Ask] No evidence at index', evidenceIndex, '- currentEvidence has', currentEvidence.length, 'items');
        return;
      }

      const evidence = currentEvidence[evidenceIndex];
      const modal = document.getElementById('docViewerModal');
      const title = document.getElementById('docViewerTitle');
      const contentEl = document.getElementById('docViewerContent');

      // Guard: filepath must exist
      if (!evidence.filepath) {
        title.innerHTML = `üìÑ ${escapeHtml(evidence.filename || 'Unknown')}`;
        contentEl.textContent = 'Source document path not available. Try re-asking the question to load the document link.';
        modal.classList.add('active');
        return;
      }

      title.innerHTML = `üìÑ ${escapeHtml(evidence.filename)} <span class="doc-modal-badge">Evidence ${evidenceIndex + 1}</span>`;
      contentEl.textContent = 'Loading document...';
      modal.classList.add('active');

      try {
        // Fetch the full document
        const response = await fetch(`/api/ask/document?filepath=${encodeURIComponent(evidence.filepath)}`);
        const data = await response.json();

        if (data.error) {
          contentEl.textContent = `Error: ${data.error}`;
          return;
        }

        // Render the document with the evidence chunk highlighted
        contentEl.innerHTML = renderDocWithHighlight(data.content, evidence.chunkContent);

        // Scroll to highlighted section
        requestAnimationFrame(() => {
          const highlighted = contentEl.querySelector('.evidence-highlight');
          if (highlighted) {
            highlighted.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        });
      } catch (error) {
        contentEl.textContent = `Failed to load document: ${error.message}`;
      }
    }

    function renderDocWithHighlight(fullContent, chunkContent) {
      if (!chunkContent || !fullContent) {
        return escapeHtml(fullContent);
      }

      // Clean up the chunk content for matching (remove FTS markup)
      const cleanChunk = chunkContent
        .replace(/<mark>/g, '')
        .replace(/<\/mark>/g, '')
        .replace(/\.\.\.$/g, '')
        .trim();

      // Try to find the chunk in the full document
      // Use first 80 chars as a search anchor (chunks can be large)
      const searchText = cleanChunk.substring(0, 80).trim();

      if (!searchText || searchText.length < 10) {
        return escapeHtml(fullContent);
      }

      const idx = fullContent.indexOf(searchText);

      if (idx === -1) {
        // Fallback: try a more fuzzy match with first line
        const firstLine = cleanChunk.split('\n')[0].trim();
        const fallbackIdx = firstLine.length > 10 ? fullContent.indexOf(firstLine) : -1;

        if (fallbackIdx === -1) {
          // No match found ‚Äî just show the document
          return escapeHtml(fullContent);
        }

        // Highlight around the first line match
        const endIdx = Math.min(fallbackIdx + cleanChunk.length, fullContent.length);
        return escapeHtml(fullContent.substring(0, fallbackIdx)) +
          '<span class="evidence-highlight">' + escapeHtml(fullContent.substring(fallbackIdx, endIdx)) + '</span>' +
          escapeHtml(fullContent.substring(endIdx));
      }

      // Found exact match ‚Äî highlight the chunk region
      const endIdx = Math.min(idx + cleanChunk.length, fullContent.length);
      return escapeHtml(fullContent.substring(0, idx)) +
        '<span class="evidence-highlight">' + escapeHtml(fullContent.substring(idx, endIdx)) + '</span>' +
        escapeHtml(fullContent.substring(endIdx));
    }

    function closeDocViewer() {
      document.getElementById('docViewerModal').classList.remove('active');
    }

    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeDocViewer();
      }
    });

    // Close modal on background click
    document.getElementById('docViewerModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeDocViewer();
      }
    });

    init();
    loadHistory();
