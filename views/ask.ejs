      try {
        await fetch(`/api/ask/history/${id}`, { method: 'DELETE' });
        loadHistory();
      } catch (error) {
        console.error('Failed to delete:', error);
      }
    }
    
    async function clearHistory() {
      const confirmed = await POAI.confirm.danger('Clear History', 'Clear all question history?');
      if (!confirmed) return;
      
      try {
