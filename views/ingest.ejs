          body: JSON.stringify(payload)
        });

        if (!ingestRes.ok) {
          const err = await ingestRes.json();
          throw new Error(err.error || 'Ingest failed');
        }

        const result = await ingestRes.json();

        // 2. Archive source file
        try {
          const archiveRes = await fetch('/api/ingest/archive-source', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sourcePath: file.path, contentType: finalType })
          });
          if (!archiveRes.ok) {
            const archErr = await archiveRes.json();
            console.warn('[Import] Archive failed:', archErr.error);
          }
        } catch (archErr) {
          console.warn('[Import] Archive network error:', archErr);
        }

        importResults.push({
          name: file.name,
          status: 'success',
          filename: result.filename,
          type: finalType
        });

      } catch (err) {
        importResults.push({ name: file.name, status: 'error', reason: err.message });
      }

      updateProgress();
      reviewNext();
    }

    function reviewReject() {
      const file = importFiles[currentReviewIndex];
      importResults.push({ name: file.name, status: 'skipped', reason: 'Manually skipped' });
      updateProgress();
      reviewNext();
    }

    function showImportSummary() {
      const review = document.getElementById('importReview');
      const progress = document.getElementById('importProgress');
      const summary = document.getElementById('importSummary');
      const content = document.getElementById('importSummaryContent');
      const fill = document.getElementById('importProgressFill');

      review.style.display = 'none';
      fill.style.width = '100%';

      const success = importResults.filter(r => r.status === 'success');
      const skipped = importResults.filter(r => r.status === 'skipped');
      const errors = importResults.filter(r => r.status === 'error');

      let html = `<p style="color:#8b949e;margin-bottom:12px;">${success.length} imported ¬∑ ${skipped.length} skipped ¬∑ ${errors.length} failed</p>`;

      if (importResults.length > 0) {
        html += `
          <table class="import-summary-table">
            <thead><tr><th>File</th><th>Status</th><th>Details</th></tr></thead>
            <tbody>
              ${importResults.map(r => `
                <tr>
                  <td>${escapeHtmlImport(r.name)}</td>
                  <td class="status-cell ${r.status === 'success' ? 'success' : r.status}">${
                    r.status === 'success' ? '‚úÖ Imported' :
                    r.status === 'skipped' ? '‚è≠Ô∏è Skipped' :
                    '‚ùå Error'
                  }</td>
                  <td>${escapeHtmlImport(r.filename || r.reason || '‚Äî')}</td>
                </tr>
              `).join('')}
            </tbody>
          </table>`;
      }

      if (success.length > 0) {
        html += `<p style="color:#3fb950;margin-top:12px;font-size:0.85rem;">
          üéâ ${success.length} file${success.length !== 1 ? 's' : ''} ingested and source .pages archived.
        </p>`;
      }

      content.innerHTML = html;
      summary.style.display = 'block';
      summary.scrollIntoView({ behavior: 'smooth', block: 'center' });

      // Update progress label
      document.getElementById('importProgressLabel').textContent = 'Done';
    }

    function guessTypeFromFilename(name) {
      const lower = name.toLowerCase();
      if (lower.includes('meeting') || lower.includes('overleg') || lower.includes('kennismaking') || lower.includes('sessie') || lower.includes('bespreking')) return 'meeting';
      if (lower.includes('log the day') || lower.includes('daily')) return 'log';
      if (lower.includes('artifact') || lower.includes('architecture') || lower.includes('abbreviation')) return 'artifact';
      if (lower.includes('idea')) return 'idea';
      return null;
    }

    function extractDateFromFilename(name) {
      const m = name.match(/^(\d{4})[.\-](\d{2})[.\-](\d{2})/);
      if (m) return `${m[1]}-${m[2]}-${m[3]}`;
      return null;
    }

    function formatSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
    }

    function escapeHtmlImport(str) {
      if (!str) return '';
      return String(str).replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
    }
