  <script>
    // State
    let selectedSemanticTags = [];
    let projectTags = [];
    let personTags = [];
    let rtes = [];
    let contentTypes = [];
    let semanticTagsData = [];

    // DOM Elements
    const form = document.getElementById('ingestForm');
    const contentInput = document.getElementById('contentInput');
    const rteSelect = document.getElementById('rteSelect');
    const contentTypeSelect = document.getElementById('contentType');
    const documentDateInput = document.getElementById('documentDate');
    const titleInput = document.getElementById('titleInput');
    const semanticTagsContainer = document.getElementById('semanticTags');
    const projectTagInput = document.getElementById('projectTagInput');
    const personTagInput = document.getElementById('personTagInput');
    const projectAutocomplete = document.getElementById('projectAutocomplete');
    const personAutocomplete = document.getElementById('personAutocomplete');
    const projectTagsList = document.getElementById('projectTagsList');
    const personTagsList = document.getElementById('personTagsList');
    const wordCountEl = document.getElementById('wordCount');
    const submitBtn = document.getElementById('submitBtn');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');

    // Initialize
    document.addEventListener('DOMContentLoaded', async () => {
      await loadRTEs();
      await loadContentTypes();
      await loadSemanticTags();
      await loadRecentTags();
      setupEventListeners();
      
      // Set today's date as default
      documentDateInput.value = new Date().toISOString().split('T')[0];
    });

    // Load RTEs
    async function loadRTEs() {
      try {
        const res = await fetch('/api/rte');
        const data = await res.json();
        // API returns array directly, not wrapped
        rtes = Array.isArray(data) ? data : (data.rtes || []);
        
        if (rtes.length === 0) {
          rteSelect.innerHTML = '<option value="">No RTEs found</option>';
          return;
        }
        
        // Get default RTE from preferences
        const defaultRte = localStorage.getItem('poai_default_rte');
        
        rteSelect.innerHTML = rtes.map(rte => 
          `<option value="${rte.id}" ${defaultRte == rte.id ? 'selected' : ''}>${rte.name}</option>`
        ).join('');
      } catch (err) {
        console.error('Error loading RTEs:', err);
        rteSelect.innerHTML = '<option value="">Error loading</option>';
      }
    }

    // Load content types
    async function loadContentTypes() {
      try {
        const res = await fetch('/api/ingest/tags/content-types');
        const data = await res.json();
        contentTypes = data.types || [];
        
        contentTypeSelect.innerHTML = contentTypes.map(type => 
          `<option value="${type.slug}">${type.icon} ${type.name}</option>`
        ).join('');
      } catch (err) {
        console.error('Error loading content types:', err);
        contentTypeSelect.innerHTML = '<option value="log">üìù Daily Log</option>';
      }
    }

    // Load semantic tags
    async function loadSemanticTags() {
      try {
        const res = await fetch('/api/ingest/tags/semantic');
        const data = await res.json();
        semanticTagsData = data.tags || [];
        
        renderSemanticTags();
      } catch (err) {
        console.error('Error loading semantic tags:', err);
      }
    }

    // Load recent tags for quick selection
    async function loadRecentTags() {
      try {
        // Load recent projects
        const projectRes = await fetch('/api/tags/recent/project?limit=10');
        const projectData = await projectRes.json();
        renderRecentTags('project', projectData.tags || []);
        
        // Load recent people
        const personRes = await fetch('/api/tags/recent/person?limit=10');
        const personData = await personRes.json();
        renderRecentTags('person', personData.tags || []);
      } catch (err) {
        console.error('Error loading recent tags:', err);
      }
    }

    // Render recent tag pills
    function renderRecentTags(type, tags) {
      const container = document.getElementById(type === 'project' ? 'recentProjectTags' : 'recentPersonTags');
      
      if (tags.length === 0) {
        container.innerHTML = '';
        return;
      }
      
      const currentTags = type === 'project' ? projectTags : personTags;
      
      container.innerHTML = `
        <span class="recent-tags-label">Recent:</span>
        ${tags.map(t => `
          <span class="recent-tag ${currentTags.includes(t.value) ? 'selected' : ''}" 
                data-value="${t.value}"
                onclick="toggleRecentTag('${type}', '${t.value}')">
            ${type === 'project' ? '#' : '@'}${t.value}
          </span>
        `).join('')}
      `;
    }

    // Toggle a recent tag
    function toggleRecentTag(type, value) {
      const tagsArray = type === 'project' ? projectTags : personTags;
      const index = tagsArray.indexOf(value);
      
      if (index === -1) {
        // Add the tag
        addTag(type, value);
      } else {
        // Remove the tag
        removeTag(type, value);
      }
      
      // Update recent tags display
      renderRecentTags(type, 
        type === 'project' ? 
          Array.from(document.querySelectorAll('#recentProjectTags .recent-tag')).map(el => ({value: el.dataset.value})) :
          Array.from(document.querySelectorAll('#recentPersonTags .recent-tag')).map(el => ({value: el.dataset.value}))
      );
    }

    // Render semantic tag chips
    function renderSemanticTags() {
      semanticTagsContainer.innerHTML = semanticTagsData.map(tag => `
        <div class="tag-chip ${selectedSemanticTags.includes(tag.slug) ? 'selected' : ''}" 
             data-slug="${tag.slug}"
             style="${selectedSemanticTags.includes(tag.slug) ? `background: ${tag.color}; border-color: ${tag.color}` : ''}"
             title="${tag.description || tag.name}">
          <span class="tag-icon">${tag.icon || 'üè∑Ô∏è'}</span>
          ${tag.name}
        </div>
      `).join('');

      // Add click handlers
      semanticTagsContainer.querySelectorAll('.tag-chip').forEach(chip => {
        chip.addEventListener('click', () => toggleSemanticTag(chip.dataset.slug));
      });
    }

    // Toggle semantic tag selection
    function toggleSemanticTag(slug) {
      const index = selectedSemanticTags.indexOf(slug);
      if (index === -1) {
        selectedSemanticTags.push(slug);
      } else {
        selectedSemanticTags.splice(index, 1);
      }
      renderSemanticTags();
    }

    // Setup event listeners
    function setupEventListeners() {
      // Word count
      contentInput.addEventListener('input', updateWordCount);
      
      // Date auto-detection
      contentInput.addEventListener('blur', autoDetectDate);
      
      // Project tag autocomplete
      projectTagInput.addEventListener('input', () => fetchAutocomplete('projects', projectTagInput.value, projectAutocomplete));
      projectTagInput.addEventListener('keydown', (e) => handleTagKeydown(e, 'project'));
      projectTagInput.addEventListener('focus', () => fetchAutocomplete('projects', projectTagInput.value, projectAutocomplete));
      
      // Person tag autocomplete
      personTagInput.addEventListener('input', () => fetchAutocomplete('people', personTagInput.value, personAutocomplete));
      personTagInput.addEventListener('keydown', (e) => handleTagKeydown(e, 'person'));
      personTagInput.addEventListener('focus', () => fetchAutocomplete('people', personTagInput.value, personAutocomplete));
      
      // Close dropdowns on outside click
      document.addEventListener('click', (e) => {
        if (!e.target.closest('.autocomplete-wrapper')) {
          projectAutocomplete.classList.remove('show');
          personAutocomplete.classList.remove('show');
        }
      });
      
      // Form submit
      form.addEventListener('submit', handleSubmit);
    }

    // Update word count
    function updateWordCount() {
      const words = contentInput.value.trim().split(/\s+/).filter(w => w.length > 0).length;
      wordCountEl.textContent = `${words} words`;
    }

    // Auto-detect date from content
    function autoDetectDate() {
      const content = contentInput.value;
      
      // Try ISO format first
      const isoMatch = content.match(/\b(\d{4}-\d{2}-\d{2})\b/);
      if (isoMatch) {
        documentDateInput.value = isoMatch[1];
        return;
      }
      
      // Try "3 February 2026" format
      const dateMatch = content.match(/\b(\d{1,2})\s+(January|February|March|April|May|June|July|August|September|October|November|December)\s+(\d{4})\b/i);
      if (dateMatch) {
        const months = {
          january: '01', february: '02', march: '03', april: '04', may: '05', june: '06',
          july: '07', august: '08', september: '09', october: '10', november: '11', december: '12'
        };
        const day = dateMatch[1].padStart(2, '0');
        const month = months[dateMatch[2].toLowerCase()];
        const year = dateMatch[3];
        documentDateInput.value = `${year}-${month}-${day}`;
      }
    }

    // Fetch autocomplete suggestions
    async function fetchAutocomplete(type, query, dropdown) {
      const rteId = rteSelect.value;
      
      try {
        const res = await fetch(`/api/ingest/tags/${type}?q=${encodeURIComponent(query)}&rteId=${rteId}`);
        const data = await res.json();
        
        const existingTags = type === 'projects' ? projectTags : personTags;
        const filteredTags = (data.tags || []).filter(t => !existingTags.includes(t.name));
        
        if (filteredTags.length > 0 || query.length > 0) {
          dropdown.innerHTML = filteredTags.map(tag => `
            <div class="autocomplete-item" data-name="${tag.name}">
              <span>${tag.name}</span>
              <span class="usage">${tag.usage_count || 0} uses</span>
            </div>
          `).join('');
          
          // Add "create new" option if query doesn't match exactly
          if (query.length > 1 && !filteredTags.some(t => t.name.toLowerCase() === query.toLowerCase())) {
            dropdown.innerHTML += `
              <div class="autocomplete-item" data-name="${query}" data-new="true">
                <span>+ Create "${query}"</span>
              </div>
            `;
          }
          
          // Add click handlers
          dropdown.querySelectorAll('.autocomplete-item').forEach(item => {
            item.addEventListener('click', () => {
              addTag(type === 'projects' ? 'project' : 'person', item.dataset.name);
              dropdown.classList.remove('show');
            });
          });
          
          dropdown.classList.add('show');
        } else {
          dropdown.classList.remove('show');
        }
      } catch (err) {
        console.error('Autocomplete error:', err);
      }
    }

    // Handle Enter key in tag inputs
    function handleTagKeydown(e, type) {
      if (e.key === 'Enter') {
        e.preventDefault();
        const input = type === 'project' ? projectTagInput : personTagInput;
        if (input.value.trim()) {
